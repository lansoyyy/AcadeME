rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Add your admin UIDs here after creating admin account in Firebase Console
      return isAuthenticated() && request.auth.uid in [
        // 'ADMIN_UID_1',
        // 'ADMIN_UID_2',
      ];
    }

    // Users collection - admin can read all, users can read own
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }

    // Swipes subcollection - track likes/passes
    match /users/{userId}/swipes/{targetUserId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) 
        && request.resource.data.keys().hasAll(['direction', 'createdAt'])
        && request.resource.data.direction in ['like', 'nope', 'superlike'];
      allow update, delete: if false; // Swipes are immutable
    }

    // Blocks subcollection
    match /users/{userId}/blocks/{blockedUserId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // FCM tokens subcollection
    match /users/{userId}/fcmTokens/{token} {
      allow read: if isOwner(userId);
      allow create, update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // Matches collection - admin can manage all
    match /matches/{matchId} {
      allow read: if isAuthenticated() && resource.data.users.hasAny([request.auth.uid]) || isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Conversations collection - admin can manage all
    match /conversations/{conversationId} {
      allow read: if isAuthenticated() && resource.data.participants.hasAny([request.auth.uid]) || isAdmin();
      allow create, update, delete: if isAdmin();
    }

    // Messages subcollection
    match /conversations/{conversationId}/messages/{messageId} {
      allow read: if isAuthenticated() 
        && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);
      
      allow create: if isAuthenticated()
        && request.resource.data.senderId == request.auth.uid
        && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);
      
      allow update, delete: if false; // Messages are immutable
    }

    // Read receipts subcollection
    match /conversations/{conversationId}/reads/{userId} {
      allow read: if isAuthenticated()
        && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);
      allow create, update: if isOwner(userId)
        && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);
      allow delete: if false;
    }

    // Reports collection - admin can read/update
    match /reports/{reportId} {
      allow create: if isAuthenticated() && request.resource.data.reporterUid == request.auth.uid;
      allow read: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Study sessions collection - admin can manage all
    match /studySessions/{sessionId} {
      allow read: if isAuthenticated() && (resource.data.hostUid == request.auth.uid || resource.data.guestUid == request.auth.uid) || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.hostUid == request.auth.uid || isAdmin();
      allow update: if isAuthenticated() && (resource.data.hostUid == request.auth.uid || resource.data.guestUid == request.auth.uid) || isAdmin();
      allow delete: if isAuthenticated() && resource.data.hostUid == request.auth.uid || isAdmin();
    }

    // Admin actions audit log
    match /adminActions/{actionId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
      allow update, delete: if false;
    }

    // Ratings collection
    match /ratings/{ratingId} {
      allow read: if isAuthenticated() || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.fromUid == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    // Forum posts
    match /forumPosts/{postId} {
      allow read: if isAuthenticated() && (resource.data.isHidden != true) || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.authorUid == request.auth.uid;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Forum comments
    match /forumPosts/{postId}/comments/{commentId} {
      allow read: if isAuthenticated() && (resource.data.isHidden != true) || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.authorUid == request.auth.uid;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Academic structure - admin managed
    match /academic/{doc=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
