rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isParticipant(conversationId) {
      return isAuthenticated() && 
        resource.data.participants.hasAny([request.auth.uid]);
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      // For discovery, use a separate query with limited fields or Cloud Function
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    // Swipes subcollection - track likes/passes
    match /users/{userId}/swipes/{targetUserId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) 
        && request.resource.data.keys().hasAll(['direction', 'createdAt'])
        && request.resource.data.direction in ['like', 'nope', 'superlike'];
      allow update, delete: if false; // Swipes are immutable
    }

    // Blocks subcollection
    match /users/{userId}/blocks/{blockedUserId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // FCM tokens subcollection
    match /users/{userId}/fcmTokens/{token} {
      allow read: if isOwner(userId);
      allow create, update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // Matches collection - both participants can read
    match /matches/{matchId} {
      allow read: if isAuthenticated() 
        && resource.data.users.hasAny([request.auth.uid]);
      // Matches are created by Cloud Functions only
      allow create, update, delete: if false;
    }

    // Conversations collection
    match /conversations/{conversationId} {
      allow read: if isAuthenticated() 
        && resource.data.participants.hasAny([request.auth.uid]);
      // Conversations are created by Cloud Functions
      allow create, update, delete: if false;
    }

    // Messages subcollection
    match /conversations/{conversationId}/messages/{messageId} {
      allow read: if isAuthenticated() 
        && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);
      
      allow create: if isAuthenticated()
        && request.resource.data.senderId == request.auth.uid
        && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);
      
      allow update, delete: if false; // Messages are immutable
    }

    // Read receipts subcollection
    match /conversations/{conversationId}/reads/{userId} {
      allow read: if isAuthenticated()
        && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);
      allow create, update: if isOwner(userId)
        && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);
      allow delete: if false;
    }

    // Reports collection
    match /reports/{reportId} {
      allow create: if isAuthenticated()
        && request.resource.data.reporterUid == request.auth.uid;
      allow read, update, delete: if false; // Only admins can read reports
    }

    // Study sessions collection
    match /studySessions/{sessionId} {
      allow read: if isAuthenticated()
        && (resource.data.hostUid == request.auth.uid || resource.data.guestUid == request.auth.uid);
      allow create: if isAuthenticated()
        && request.resource.data.hostUid == request.auth.uid;
      allow update: if isAuthenticated()
        && (resource.data.hostUid == request.auth.uid || resource.data.guestUid == request.auth.uid);
      allow delete: if isAuthenticated()
        && resource.data.hostUid == request.auth.uid;
    }
  }
}
